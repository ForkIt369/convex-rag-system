{
  "extends": "convex/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022", "dom"],
    "jsx": "preserve",
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noEmit": true
  },
  "include": [
    "convex/**/*",
    "app/**/*",
    "pages/**/*",
    "components/**/*",
    "lib/**/*",
    "scripts/**/*"
  ],
  "exclude": ["node_modules", "convex/_generated"]
}